<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl262626"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/my_p_lay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/main_bg_color1"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="通知"
            android:textColor="@color/main_bq_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_channel_type"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/cb_zltj"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="公告"
                    android:textColor="@drawable/select_login_rb_color"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/cb_bjsx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="消息"
                    android:textColor="@drawable/select_login_rb_color"
                    android:textSize="18sp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_zltj_line"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/main_bq_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_bqsx_line"
                        android:layout_width="30dp"
                        android:layout_height="3dp"
                        android:layout_centerInParent="true"
                        android:background="@color/main_bq_color"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zcf.bananavideohannan.view.ViewPagerNoScroll
            android:id="@+id/chanfrgm"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
