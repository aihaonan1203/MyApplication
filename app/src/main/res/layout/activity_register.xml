<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_llyt_height"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shouji" />

            <EditText
                android:id="@+id/edt_reg_name"
                style="@style/login_edt_style"
                android:hint="请输入手机号" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="gone"
            android:layout_marginBottom="15dp"
            android:background="#dedede" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_llyt_height"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/yanzhengma" />

            <EditText
                android:id="@+id/edt_reg_pwd"
                style="@style/login_edt_style"
                android:layout_weight="1"
                android:hint="请输入验证码" />

            <TextView
                android:id="@+id/tv_send_code"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_convers_white_bq_border"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/main_bq_color"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="15dp"
            android:background="#dedede" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_llyt_height"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_mm2" />

            <EditText
                android:id="@+id/edt_phone_code"
                style="@style/login_edt_style"
                android:hint="请输入密码" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="15dp"
            android:background="#dedede" />

        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="@dimen/login_llyt_height"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_mm2" />

            <EditText
                android:id="@+id/edt_wel_code"
                style="@style/login_edt_style"
                android:hint="请输入邀请码" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedede" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_login_login"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </LinearLayout>


</LinearLayout>